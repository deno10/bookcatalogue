{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ author.surname }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ author.firstName }}</td>
            </tr>
            <tr>
                <th>Patronymic</th>
                <td>{{ author.patronymic }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {% for book in author.books %}
                        <a href="{{ path('app_book_show', {'id': book.id}) }}">{{ book.title }}</a><br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
