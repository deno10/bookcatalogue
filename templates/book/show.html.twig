{% extends 'base.html.twig' %}

{% block title %}Book{% endblock %}

{% block body %}
    <h1>Book</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ book.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ book.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ book.year }}</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>{{ book.shownISBN }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ book.pages }}</td>
            </tr>
            <tr>
                <th>Cover</th>
                <td>
                    {% if (book.cover) %}
                        <img src="{{ asset('uploads/covers/' ~ book.cover) }}" alt="cover">
                    {% else %}
                        <img src="{{ asset('uploads/covers/nophoto.jpg') }}" alt="cover">
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Authors</th>
                <td>
                    {% for author in book.authors %}
                        <a href="{{ path('app_author_show', {'id': author.id}) }}">{{ author.fullname }}</a><br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

    <a href="{{ path('app_book_edit', {'id': book.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
{% endblock %}
